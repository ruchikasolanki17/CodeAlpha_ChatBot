def chatbot():
    print("🤖 Chatbot: Hello! I am a simple chatbot. Type 'bye' to exit.")

    while True:
        user_input = input("You: ").lower()

        if user_input == "hello":
            print("🤖 Chatbot: Hi there!")

        elif user_input == "how are you":
            print("🤖 Chatbot: I'm fine, thank you! How about you?")

        elif user_input == "what is your name":
            print("🤖 Chatbot: I am CodeAlpha Bot.")

        elif user_input == "bye":
            print("🤖 Chatbot: Goodbye! Have a nice day.")

        elif user_input == "what do you do":
            print("🤖 I answer question and help users through chat.")  

            print("How can i help you?")
            break
        else:
            print("🤖 Chatbot: I'm sorry, I don't understand that.")
       

# Run the code
chatbot()
